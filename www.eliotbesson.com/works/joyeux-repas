      }, 1.2)

      .from(".work_desc-wrap .modal-trigger", {
        y: 40,
        scale: 1.1,
        opacity: 0,
        duration: 1.2,
        ease: "expo.out",
      }, 1.3)

      .from(".work_card", {
        y: "200%",
        filter: 'blur(12px)',
        duration: 1,
        ease: "expo.out",
        stagger: {
