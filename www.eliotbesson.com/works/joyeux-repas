        stagger: 0.1,
        ease: "expo.out",
      }, 1.4)

      .from(".menu_links .menu_link", {
        y: "-10vw",
        duration: 1.2,
        ease: "expo.out",
        stagger: {
          each: 0.05,
          from: "start"
        }
      }, 1.4)

      .from(".menu_main-inner", {
        x: "50vw",
        scale: 1.2,
        opacity: 0,
