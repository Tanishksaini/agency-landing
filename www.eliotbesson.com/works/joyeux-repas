          from: "center"
        }
      }, 1.2)

      .set(".work_section", { cursor: "auto" }, 1.4)
      .set(".work_desc-wrap", { pointerEvents: "auto" }, 1.6)
      .set(".work_btm", { pointerEvents: "auto" }, 1.6);

  });

  return () => gsap.killTweensOf("*");
});

