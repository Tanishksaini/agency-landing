document.addEventListener("DOMContentLoaded", function () {
let mm = gsap.matchMedia();

mm.add("(min-width: 992px)", () => {
  document.fonts.ready.then(() => {
    gsap.set("[data-hidden]", { visibility: "visible" });

    const titleSplit = new SplitType(".work_title", {
      types: "words, chars",
      force: true
    });

    const subtitleSplit = new SplitType(".work_desc-wrap .txt-color-light-60o", {
      types: "words, lines"
    });

    const tl = gsap.timeline();
    tl.from(titleSplit.chars, {
        y: "100%",
        opacity: 0,
        duration: 1,
        ease: "expo.out",
        stagger: {
          amount: 0.2,
          from: "center"
        }
      }, 0)

      .fromTo(".work_title", { fontSize: "10em", opacity: 0.2 }, {
        fontSize: "6em",
        opacity: 1,
        duration: 1.6,
        ease: "expo.inOut"
      }, 0.2)

      .from(subtitleSplit.lines, {
        y: "100%",
        opacity: 0,
        duration: 0.8,
        ease: "power4.out",
        stagger: 0.1,
      }, 1)

      .from(".menu_logo-link", {
        x: "-50vw",
        scale: 1.2,
        opacity: 0,
        duration: 1.2,
        ease: "expo.out",
      }, 1.4)

      .from(".index-trigger", {
        x: "-50vw",
        scale: 1.2,
        opacity: 0,
        duration: 1.2,
        ease: "expo.out",
      }, 1.3)

      .from(".work_infos .tag-xs", {
        scale: 0.75,
