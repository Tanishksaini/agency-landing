$(".work_asset").hover(
  function () {
    $(".work_content-wrap").css({
      "opacity": "0.2",
      "transform": "scale(0.8)",
      "transition": "opacity 0.4s cubic-bezier(.16, 1, .3, 1), transform 0.4s cubic-bezier(.16, 1, .3, 1)"
    });

    $(".index-trigger").css({
      "opacity": "0.2",
      "transition": "opacity 0.4s cubic-bezier(.16, 1, .3, 1)"
    });

  },
  function () {
    $(".work_content-wrap").css({
      "opacity": "1",
      "transform": "scale(1)"
    });

    $(".index-trigger").css({
      "opacity": "1"
    });
  }
);
// --- Video Play/Pause + Cursor Attribute Switching ---
const workCards = document.querySelectorAll('.work_card');
const cursorItem = document.querySelector(".cursor");
const cursorParagraph = cursorItem.querySelector("p");
let lastText = '';

workCards.forEach(card => {
  const video = card.querySelector('.work_embed video');

  card.addEventListener('mouseenter', () => {
    if (video) {
      video.play().catch(() => {});
    }
  });

  card.addEventListener('mouseleave', () => {
    if (video) {
      video.pause();
      updateCursor(card, 'Pause video');
    }
  });

  card.addEventListener('click', () => {
    if (video) {
      if (video.paused) {
        video.play().catch(() => {});
        updateCursor(card, 'Pause video');
      } else {
        video.pause();
        updateCursor(card, 'Play video');
      }
    }
  });
});

function updateCursor(target, text) {
  target.setAttribute('data-cursor', text);
  cursorParagraph.innerHTML = text;
  lastText = text;
}

// --- Cursor Follow Mouse ---
let xOffset = 25;
let yOffset = 50;
gsap.set(cursorItem, { xPercent: xOffset, yPercent: yOffset });

let xTo = gsap.quickTo(cursorItem, "x", { ease: "power3" });
let yTo = gsap.quickTo(cursorItem, "y", { ease: "power3" });

window.addEventListener("mousemove", e => {
  let scrollY = window.scrollY;
  let cursorX = e.clientX;
  let cursorY = e.clientY + scrollY;

  gsap.to(cursorItem, {
    xPercent: xOffset,
    yPercent: yOffset,
    duration: 0.3,
    ease: "power3"
  });

  xTo(cursorX);
  yTo(cursorY - scrollY);
});

document.querySelectorAll("[data-cursor]").forEach(target => {
  target.addEventListener("mouseenter", () => {
    const newText = target.getAttribute("data-cursor");
    if (newText !== lastText) {
      cursorParagraph.innerHTML = newText;
      lastText = newText;
    }
  });
});

// Project Modal Opening
mm.add("(min-width: 992px)", () => {
  document.querySelectorAll('.modal-trigger').forEach(trigger => {
    trigger.addEventListener('click', () => {
      const modal = document.querySelector('.work_modal');
      const pieces = modal.querySelectorAll('.work_modal-info-piece');
      const brief = modal.querySelector('.work_brief-txt');
      const closeArea = modal.querySelector('.work_modal-pointer');

      modal.style.display = 'block';
      modal.style.visibility = 'hidden';

      const split = new SplitType(brief, { types: 'lines', lineClass: 'brief-line' });

      modal.style.display = 'none';
      modal.style.visibility = 'visible';

      gsap.fromTo(modal, { opacity: 0, display: 'none' },
      {
        opacity: 1,
        display: 'block',
        duration: 0.8,
        ease: 'power4.out'
      });

      gsap.fromTo(closeArea, { display: 'none' },
      {
        display: 'block',
        duration: 0.1,
        delay: 0.3,
      });

      gsap.fromTo(pieces, { x: 160, opacity: 0 },
      {
        x: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.1,
        ease: 'expo.out'
      });

      gsap.fromTo(brief.querySelectorAll('.brief-line'), { x: -80, opacity: 0 },
      {
        x: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.04,
        ease: 'expo.out'
      });

      closeArea.addEventListener('click', () => {
        gsap.to(pieces, {
          x: 160,
          opacity: 0,
          duration: 0,
          stagger: 0.05,
          ease: 'expo.out',
          delay: 0.6
        });

        gsap.to(brief.querySelectorAll('.brief-line'), {
          x: -80,
          opacity: 0,
          duration: 0,
          stagger: 0.02,
          ease: 'expo.out',
          delay: 0.6
        });

        gsap.to(modal, {
          opacity: 0,
          duration: 0.4,
          delay: 0,
          ease: 'power4.out',
          onComplete: () => {
            modal.style.display = 'none';
            brief.innerHTML = brief.textContent; // Reset SplitType
          }
        });
      }, { once: true });
    });
  });
});

mm.add("(max-width: 991px)", () => {
  document.querySelectorAll('.modal-trigger').forEach(trigger => {
    trigger.addEventListener('click', () => {
      const modal = document.querySelector('.work_modal');
      const pieces = modal.querySelectorAll('.work_modal-info-piece');
      const brief = modal.querySelector('.work_brief-txt');
      const modalButton = modal.querySelector('.work_modal-link-ext');
      const closeButton = modal.querySelector('.modal-trigger_close');

      modal.style.display = 'block';
      modal.style.visibility = 'hidden';

      const split = new SplitType(brief, { types: 'lines', lineClass: 'brief-line' });

      modal.style.display = 'none';
      modal.style.visibility = 'visible';

      gsap.fromTo(modal, { opacity: 0, display: 'none' },
      {
        opacity: 1,
        display: 'block',
        duration: 0.8,
        ease: 'power4.out'
      });

      gsap.fromTo(pieces, { y: 80, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.1,
        delay: 0.40,
        ease: 'expo.out'
      });

      gsap.fromTo(modalButton, { y: 40, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        delay: 0.3,
        duration: 1,
        ease: 'expo.out'
      });

      gsap.fromTo(brief.querySelectorAll('.brief-line'), { y: 20, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 1,
        stagger: 0.04,
        ease: 'expo.out'
      });

      closeButton.addEventListener('click', () => {
        gsap.to(pieces, {
          y: 80,
          opacity: 0,
          duration: 0,
          stagger: 0.05,
          delay: 0.6,
          ease: 'expo.out'
        });

        gsap.to(modalButton, {
          y: 40,
          opacity: 0,
          duration: 0,
          delay: 0.6,
          ease: 'expo.out'
        });

        gsap.to(brief.querySelectorAll('.brief-line'), {
          y: 20,
          opacity: 0,
          duration: 0,
          stagger: 0.02,
          delay: 0.6,
          ease: 'expo.out'
        });

        gsap.to(modal, {
          opacity: 0,
          duration: 0.4,
          delay: 0,
          ease: 'power4.out',
          onComplete: () => {
            modal.style.display = 'none';
            brief.innerHTML = brief.textContent; // Reset SplitType
          }
        });
      }, { once: true });
    });
  });
});

// Works List Modal Opening 
document.querySelectorAll('.index-trigger').forEach(trigger => {
  const modal = document.querySelector('.index_modal');
  const items = modal.querySelectorAll('.index_item');
  const closeArea = modal.querySelector('.index_modal-pointer');

  let isModalOpen = false;

  const openModal = () => {
    gsap.fromTo(modal, { opacity: 0, display: 'none' },
    {
      opacity: 1,
      display: 'block',
      duration: 0.8,
      ease: 'power4.out'
    });

    gsap.fromTo(items, { x: -120, opacity: 0 },
    {
      x: 0,
      opacity: 1,
      duration: 1,
      stagger: 0.1,
      ease: 'expo.out'
    });

    isModalOpen = true;
  };

  const closeModal = () => {
    gsap.to(items, {
      x: -120,
      opacity: 0,
      duration: 0,
      stagger: 0.05,
      delay: 0.4,
      ease: 'expo.out'
    });

    gsap.to(modal, {
      opacity: 0,
      duration: 0.4,
      ease: 'power4.out',
      onComplete: () => {
        modal.style.display = 'none';
        isModalOpen = false;
      }
    });
  };

  trigger.addEventListener('click', () => {
    isModalOpen ? closeModal() : openModal();
  });

  closeArea.addEventListener('click', () => {
    if (!isModalOpen) return;

    // ð Simulate click on the button
    const button = document.querySelector('.button-dark_transparent');
    if (button) button.click();

    // ð Then close the modal
    closeModal();
  });
});

document.querySelectorAll('.button-dark_transparent').forEach(button => {
  const lottieContainer = button.querySelector('.button_lottie');
  const lottiePath = lottieContainer.getAttribute('data-lottie-path');

  const anim = lottie.loadAnimation({
    container: lottieContainer,
    renderer: 'svg',
    loop: false,
    autoplay: false,
    path: lottiePath,
  });

  let isReady = false;
  let gsapTween = null;
  let hasBeenClickedOnce = false;
  let hasBeenClickedTwice = false;

  anim.addEventListener('DOMLoaded', () => {
    isReady = true;
  });

  const animateLottie = (from, to, duration, onComplete = null) => {
    if (gsapTween) gsapTween.kill();

    const frameObj = { frame: from };

    gsapTween = gsap.to(frameObj, {
      frame: to,
      duration,
      ease: 'power2.out',
      onUpdate: () => {
        anim.goToAndStop(frameObj.frame, true);
      },
      onComplete
    });
  };

  button.addEventListener('mouseenter', () => {
    if (!isReady || hasBeenClickedOnce) return;
    animateLottie(0, 65, 1);
  });

  button.addEventListener('mouseleave', () => {
    if (!isReady || hasBeenClickedOnce) return;
    animateLottie(45, 0, 0.4);
  });

  button.addEventListener('click', () => {
    if (!isReady) return;

    if (!hasBeenClickedOnce) {
      hasBeenClickedOnce = true;
      animateLottie(65, 110, 1);
    }
    else if (!hasBeenClickedTwice) {
      hasBeenClickedTwice = true;
      animateLottie(110, 160, 1, () => {
        anim.goToAndStop(0, true);
        hasBeenClickedOnce = false;
        hasBeenClickedTwice = false;
      });
    }
  });
});

// Hero Swiper Slider
var swiper = new Swiper(".swiper.h_works", {
  slidesPerView: 1.2,
  spaceBetween: 0,
  centeredSlides: true,
  a11y: {
    slideRole: 'listitem'
  },
  navigation: {
    nextEl: ".swiper-arrow_next",
    prevEl: ".swiper-arrow_prev",
  },
  breakpoints: {
    768: {
      slidesPerView: 1.8,
      spaceBetween: 12,
      centeredSlides: true,
    },
  },

  on: {
    transitionStart: function () {
      // Pause all videos when transitioning
      document.querySelectorAll(".swiper-slide video").forEach((video) => {
        video.pause();
      });
    },

    transitionEnd: function () {
      // Get the active slide and its video
      var activeIndex = this.activeIndex;
      var activeSlide = document.getElementsByClassName("swiper-slide")[activeIndex];
      var activeVideo = activeSlide?.querySelector(".work_embed video");

      if (activeVideo) {
        activeVideo.muted = true; // Fix autoplay restrictions
        activeVideo.setAttribute("playsinline", ""); // Mobile support
        activeVideo.play().catch(() => {});
      }
    },
  },
});

// â Pause videos when Swiper is not in view & resume when it's back
gsap.registerPlugin(ScrollTrigger);

ScrollTrigger.create({
  trigger: ".swiper.h_works",
  start: "top bottom", // When Swiper fully enters viewport
  end: "bottom top", // When Swiper fully leaves viewport
  onLeave: () => {
    document.querySelectorAll(".swiper-slide video").forEach((video) => {
      video.pause(); // â Pause video but keep progress
    });
  },
  onEnterBack: () => {
    // â Resume playing only the active slide's video when Swiper is back in view
    var activeSlide = document.querySelector(".swiper-slide.h_works.swiper-slide-active");
    var activeVideo = activeSlide?.querySelector(".work_embed video");

    if (activeVideo) {
      activeVideo.play().catch(() => {});
    }
  },
});

// â Pause all videos when Swiper is not visible in viewport
gsap.registerPlugin(ScrollTrigger);

ScrollTrigger.create({
  trigger: ".swiper.h_works",
  start: "top bottom", // When Swiper fully enters viewport
  end: "bottom top", // When Swiper fully leaves viewport
  onLeave: () => {
    document.querySelectorAll(".swiper-slide video").forEach((video) => {
      video.pause();
      video.currentTime = 0; // Reset video when Swiper is out of view
    });
  },
});
});
