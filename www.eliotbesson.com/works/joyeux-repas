  }

  .field_radio-button {
    transition: 0.2s border-color ease;
  }

  .field_radio-button:hover {
    border-color: rgba(250, 250, 250, 0.24);
  }

  .field_radio-button .txt-color-light-60o {
    transition: 0.2s color ease;
  }

  .field_radio-button:hover .txt-color-light-60o {
    color: var(--light--main);
  }

  .contact_close-btn {
    transition: 0.2s border-color ease;
  }

  .contact_close-btn .icon_embed20 {
    transition: 0.3s opacity ease;
  }

  .contact_close-btn:hover {
    border-color: rgba(250, 250, 250, 0.24);
  }

  .contact_close-btn:hover .icon_embed20 {
    opacity: 0.6;
  }
}
